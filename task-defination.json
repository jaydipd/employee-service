{
  "family": "employee-task",
  "networkMode": "awsvpc",
  "requiresCompatibilities": ["FARGATE"],
  "cpu": "256",
  "memory": "512",
  "executionRoleArn": "arn:aws:iam::145523123074:role/ecsTaskExecutionRole",
  "containerDefinitions": [
    {
      "name": "employee-app",
      "image": "145523123074.dkr.ecr.us-east-1.amazonaws.com/employee-service:1",
      "essential": true,
      "portMappings": [
        {
          "containerPort": 8080,
          "hostPort": 8080
        }
      ],
      "environment": [
        {
          "name": "AWS_REGION",
          "value": "ap-south-1"
        }
      ]
    }
  ]
}